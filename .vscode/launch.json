{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Debug",
        "runtimeExecutable": "${workspaceFolder}/server/node_modules/.bin/ts-node-dev",
        "args": ["--respawn", "--transpile-only", "src/main.ts"],
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "cwd": "${workspaceFolder}/server"
      },
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Debug Worker",
        "runtimeExecutable": "${workspaceFolder}/server/node_modules/.bin/ts-node-dev",
        "args": ["--respawn", "--transpile-only", "src/worker/PGNWorkerMain.ts"],
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "cwd": "${workspaceFolder}/server"
      }
    ]
}
