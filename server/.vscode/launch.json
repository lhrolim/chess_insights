{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
            "args": ["--respawn", "--transpile-only", "src/main.ts"],
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}"
          }
    ]
}
