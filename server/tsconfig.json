{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020", // Updated target version
    "noImplicitAny": true, // Enable for better type safety
    "moduleResolution": "node",
    "strict": false, // Enable strict mode for full type-checking
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@internal/*": ["src/internal/*"],
      "@util/*": ["src/internal/util/*"],
      "@infra/*": ["src/infra/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
