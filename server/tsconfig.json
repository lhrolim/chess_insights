{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@api/*": ["src/api/*"],
      "@internal/*": ["src/internal/*"],
    }
  },
  "include": ["src/**/*"]
}
